{
  "ts-node": { "files": true },
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", ".src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
